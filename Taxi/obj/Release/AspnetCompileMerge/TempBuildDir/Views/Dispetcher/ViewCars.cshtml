@{
    ViewBag.Title = "ViewCars";
    Layout = "~/Views/Shared/_LayoutForDispetcher.cshtml";
}


<table class="table table-hover ">
    <thead>
    <tr>
        <th id="table-head">Тип</th>
        <th id="table-head">Номерний знак</th>
        <th id="table-head">Опис</th>
        <th id="table-head">Номер кузова</th>
        <th id="table-head">Кілометраж</th>
        <th id="table-head">Дата останнього ТО</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in ViewBag.Cars)
    {
        <tr>
            <td>@i.Type</td>
            <td>@i.NumberPlate</td>
            <td>@i.Description</td>
            <td>@i.BodyNumber</td>
            <td>@i.Kilometrage</td>
            <td>@i.DateOfLastTS.ToShortDateString()</td>
            <td><a class="button"  href="/Dispetcher/EditCar?id=@i.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
        </tr>
    }
    </tbody>
</table>
